#!/bin/bash
# info: add ssh key
# options: USER 
#
# Lists $user/.ssh/authorized_keys

#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#


# Argument definition
user=$1

format=${2-shell}

# Includes
source $HESTIA/func/main.sh

# JSON list function
json_list() {
	IFS=$'\n'
    i=1
    objects=$(echo "$keys" |wc -l)
    echo "{"
       for str in $keys; do
	   METHOD=$(echo $str | cut -d' ' -f1)
	   KEY=$(echo $str | cut -d' ' -f2)
	   ID=$(echo $str | cut -d' ' -f3)
	   echo -n '		"'$ID'": {
        "ID": "'$ID'",
        "KEY": "'$KEY'",
        "METHOD": "'$METHOD'"
		}'
		if [ "$i" -lt "$objects" ]; then
            echo ','
        else
            echo
        fi
        ((i++))
		done		
    echo "}"   
}

shell_list() {
    IFS=$'\n'
    echo "ID~KEY~METHOD"
    echo "----~----~---"
    for str in $keys; do
	   METHOD=$(echo $str | cut -d' ' -f1)
	   KEY=$(echo $str | cut -d' ' -f2)
	   ID=$(echo $str | cut -d' ' -f3)
        echo "$ID~$KEY~$METHOD"
    done
}

# PLAIN list function
plain_list() {
    IFS=$'\n'
    for str in $keys; do
	   METHOD=$(echo $str | cut -d' ' -f1)
	   KEY=$(echo $str | cut -d' ' -f2)
	   ID=$(echo $str | cut -d' ' -f3)
        echo -e "$ID\t$KEY\t$METHOD"
    done
}

# CSV list function
csv_list() {
    IFS=$'\n'
    echo "ID,KEY,METHOD"
    for str in $keys; do
	   METHOD=$(echo $str | cut -d' ' -f1)
	   KEY=$(echo $str | cut -d' ' -f2)
	   ID=$(echo $str | cut -d' ' -f3)
        echo "\"$ID\",\"$KEY\",\"$METHOD\""
    done
}
#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

is_format_valid 'user'
is_object_valid 'user' 'USER' "$user"
is_object_unsuspended 'user' 'USER' "$user"

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

#check if file exsists

if [ ! -f "$HOMEDIR/$user/.ssh/authorized_keys" ]; then
  exit
fi
# Parsing backup config
#cat "$HOMEDIR/$user/.ssh/authorized_keys"
keys=$(cat "$HOMEDIR/$user/.ssh/authorized_keys")

# Listing data
case $format in
     json)   json_list ;;
     plain)  plain_list ;;
     csv)    csv_list ;;
     shell)  shell_list |column -t ;;
esac


#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Logging

exit
